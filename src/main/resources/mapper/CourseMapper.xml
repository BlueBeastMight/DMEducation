<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.dm.education.Dao.CourseDao">    <resultMap id="CourseMap" type="com.dm.education.Model.Course">        <result column="COURSE_ID" property="course_id"/>        <result column="COURSE_NAME" property="course_name"/>        <result column="COURSE_XUEFEN" property="course_xueFen"/>        <result column="DEPARTMENT_ID" property="department_id"/>        <result column="TEACHER_ID" property="teacher_id"/>        <association property="teacher" javaType="teacher">            <result column="TEACHER_ID" property="teacher_id"/>            <result column="TEACHER_NAME" property="teacher_name"/>            <result column="TEACHER_GENDER" property="teacher_gender"/>            <result column="PASSWORD" property="password"/>            <result column="TITLE" property="title"/>            <result column="DEPARTMENT_ID" property="department_id"/>        </association>        <association property="department" javaType="department">            <result column="DEPARTMENT_ID" property="department_id"/>            <result column="DEPARTMENT_NAME" property="department_name"/>        </association>    </resultMap>    <select id="findAll" resultMap="CourseMap">        select *        from DMEXAM.COURSES c,             DMEXAM.TEACHERS t,             DMEXAM.DEPARTMENTS d        where c.teacher_id = t.teacher_id          and c.department_id = d.department_id    </select>    <select id="findCourseByTeacherId" resultMap="CourseMap">        select *        from DMEXAM.COURSES c,             DMEXAM.DEPARTMENTS d        where TEACHER_ID = #{teacher_id}          and c.department_id = d.department_id    </select></mapper>